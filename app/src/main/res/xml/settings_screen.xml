<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidElementNotAllowed -->
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/settings_stream"
        app:iconSpaceReserved="false">

        <io.bumbumapps.radio.internetradioplayer.presentation.settings.SeekBarDialogPreference
            android:defaultValue="3"
            android:dialogMessage="@string/setting_initial_buffer_desc"
            android:key="INITIAL_BUFFER_LENGTH"
            android:title="@string/setting_initial_buffer"
            app:iconSpaceReserved="false"
            />

        <io.bumbumapps.radio.internetradioplayer.presentation.settings.SeekBarDialogPreference
            android:defaultValue="6"
            android:dialogMessage="@string/setting_buffer_desc"
            android:key="BUFFER_LENGTH"
            android:title="@string/setting_buffer"
            app:iconSpaceReserved="false"
            />

        <Preference
            android:key="AUDIO_FOCUS"
            android:title="@string/setting_audio_focus"
            android:persistent="false"
            app:iconSpaceReserved="false"
            />

        <SwitchPreference
            android:key="COVER_ART_ENABLED"
            android:title="@string/setting_load_cover_art"
            app:iconSpaceReserved="false"
            android:defaultValue="true"
            />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/settings_backup_restore"
        app:iconSpaceReserved="false">

        <Preference
            android:key="BACKUP_STATIONS"
            android:persistent="false"
            android:title="@string/setting_backup"
            app:iconSpaceReserved="false"
            />

        <Preference
            android:key="RESTORE_STATIONS"
            android:persistent="false"
            android:title="@string/setting_restore"
            app:iconSpaceReserved="false"
            />

    </PreferenceCategory>





</PreferenceScreen>
